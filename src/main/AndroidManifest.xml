<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.anoop.managedailyexpenses">

    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
                  android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddMemberActivity"
            android:label="Add Member"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AddExpensesActivity"
            android:label="Add Expenses"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AdvancePaymentActivity"
            android:label="Add Advance Payment"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ViewExpensesActivity"
            android:label="Expenses"
            android:screenOrientation="portrait"/>
        <activity android:name=".LoginActivity"
            android:label="Member Login"
            android:screenOrientation="portrait"/>
        <activity android:name=".ProfileActivity"
            android:label="Profile"
            android:screenOrientation="portrait"/>
    </application>

</manifest>